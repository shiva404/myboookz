div(class="row clearfix")
    div(class="col-md-12 column")            
        div(id="users", class="box-border")
            div(class="users-list")
                div(class="row clearfix")
                    - var n = users.length
                    - var i = 0
                    - while(i < n){
                        - var user_unit = users[i]
                        - if(i > 0 && i%2 == 0) {
                            div(class="row clearfix")
                        - }
                            div(class="col-md-6 column")
                                include ../user/user_unit
                        - i++
                    - }