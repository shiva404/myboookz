div(class="row clearfix")
    div(class="col-md-12 column")
        div(class="add-friend pull-right")
            button(class="btn-primary btn", id="add-members-group", data-toggle="modal", data-target="#add-members-group-modal") 
                span Add Members(+)
    hr
    div(class="col-md-12 column")            
        div(id="users", class="box-border")
            div(class="users-list")
                div(class="row clearfix")
                    - var n = groupMembers.length
                    - var i = 0
                    - while(i < n){
                        - var user_unit = groupMembers[i]
                        - if(i > 0 && i%3 == 0) {
                            div(class="row clearfix")
                        - }
                            div(class="col-md-4 column")
                                include ../user/user_unit_group_mem_action
                        - i++
                    - }