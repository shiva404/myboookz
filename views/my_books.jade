extends layout
block content
    div(id="page-container", class="AppContent main-wrapper container")
        include ./includes/navbar.jade
        div(class="row clearfix")
            div(class="dashboard dashboard-left")
                include includes/dashboard
            div(class="content-main-full")
                section
                    div(class="tabs tabs-style-topline")
                        nav
                            ul
                                li(class="tab-current")
                                    a(href="#my-books-tab-read-content", id="my-books-tab-read", class="icon icon-home")
                                        span Read Books(#{books.readBooks.length})
                                li(class="")
                                    a(href="#my-books-tab-owned-content", id="my-books-tab-owned", class="icon icon-gift")
                                        span Owned(#{books.ownedBooks.length})
                                li(class="")
                                    a(href="#my-books-tab-borrowed-content", id="my-books-tab-borrowed", class="icon icon-upload")
                                        span Borrowed(#{books.borrowedBooks.length})
                                li
                                    a(href="#my-books-tab-wishlist-content", id="my-books-tab-wishlist", class="icon icon-coffee")
                                        span Wishlist(#{books.wishlistBooks.length})
                                
                        div(class="content-wrap")
                            section(id="my-books-tab-read-content", class="")
                                div(id="my-books-tab-read-content-div")
                                     include ./book/read_book_details
                            section(id="my-books-tab-owned-content", class="")
                                div(id="my-books-tab-owned-content-div")
                                    include ./book/owned_book_details
                            section(id="my-books-tab-borrowed-content", class="")
                                div(id="my-books-tab-borrowed-content-div")
                                    include ./book/borrowed_book_details
                            section(id="my-books-tab-wishlist-content", class="")
                                div(id="my-books-tab-wishlist-content-div")
                                    include ./book/wishlist_book_details
                        script
                            include ./tab.js
